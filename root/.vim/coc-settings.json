{
	"outline.keepWindow": false,
	"clangd.enabled": true,
	"clangd.arguments": [
		"--clang-tidy",
		"--compile-commands-dir=_build/debug",
		"--pretty",
		"--cross-file-rename",
		"--inlay-hints=true",
		"--background-index",
		"--suggest-missing-includes=true"
	],
	"languageserver": {
		"golang": {
			"command": "gopls",
			"rootPatterns": [
				"go.mod"
			],
			"filetypes": [
				"go"
			]
		}
	}
}
