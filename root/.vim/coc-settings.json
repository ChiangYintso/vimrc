{
	"languageserver": {
		"ocaml-lsp": {
			"command": "opam",
			"args": ["config", "exec", "--", "ocamllsp"],
			"filetypes": ["ocaml", "reason"]
		},
		"typst": {
			"command": "typst-lsp",
			"filetypes": [
				"typst"
			]
		},
		"bash": {
			"enable": false,
			"command": "bash-language-server",
			"args": ["start"],
			"filetypes": ["sh"],
			"ignoredRootPaths": ["~"]
		}
	},
	"coc.preferences.currentFunctionSymbolAutoUpdate": true,
	"coc.preferences.useQuickfixForLocations": true,
	"outline.keepWindow": false,
	"clangd.enabled": true,
	"clangd.arguments": [
		"--clang-tidy",
		"--compile-commands-dir=build",
		"--pretty",
		"--cross-file-rename",
		"--inlay-hints=true",
		"--background-index",
		"--suggest-missing-includes=true",
		"--header-insertion=iwyu"
	],
	"ltex.enabled": ["latex"],
	"python.pythonPath": "/bin/python3",
	"python.linting.mypyEnabled": false,
	"python.linting.pylintEnabled": true,
	"pyright.enable": true,
	"pyright.testing.provider": "unittest",
	"rust-analyzer.enable": true,
	"rust-analyzer.cargo.autoreload": true,
	"rust-analyzer.procMacro.enable": true,
	"workspace.ignoredFolders": [
		"$HOME",
		"$HOME/.cargo/**",
		"$HOME/.rustup/**"
	],
	"go.enable": true,
	"go.goplsPath": "/usr/bin/gopls",
	"java.enabled": true,
	"json.enable": true,
	"json.schemaDownload.enable": true,
	"marksman.enable": false,
	"texlab.latexFormatter": "latexindent",
	"coc.source.around.shortcut": "around",
	"coc.source.buffer.shortcut": "buffer",
	"coc.source.dictionary.enable": false,
	"coc.source.dictionary.filetypes": ["markdown", "text", "latex"],
	"coc.source.dictionary.shortcut": "dict",
	"coc.source.word.enable": true,
	"coc.source.word.filetypes": ["markdown", "text", "latex"],
	"coc.source.word.shortcut": "word",
	"coc.source.emoji.enable": true,
	"coc.source.tag.enable": true,
	"coc.source.tag.shortcut": "tag",
	"coc.source.ultisnips.shortcut": "snip",
	"coc.source.vimtex.enable": true,
	"suggest.formatItems": [
		"abbr",
		"menu",
		"kind",
		"shortcut"
	]
}
