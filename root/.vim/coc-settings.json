{
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "args": ["--compile-commands-dir=_build/debug"],
      "rootPatterns": [".git", "compile_flags.txt", "compile_commands.json"],
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    }
  }
}
